extends layout
block main
  .col-lg-2
    .row
      a.btn.btn-success New Message
      table.table.table-striped
        thead
          tr
            th Send to...
        tbody
          tr
            td Bob Dobbs
          tr
            td Bob Dobbs
  .col-lg-10
    .row
      p Welcome
    .row
      p Hi, this is DartComm speaking!
      table.table.table-striped
        thead
          tr
            th Date
            th From
            th Subject
            th Flags
        tbody(data-bind="template: { name: 'tableRowTemplate', foreach: TableRows, as: 'Row' }")
          script#tableRowTemplate(type='text/html')
            tr
              td(data-bind='text: date')
              td(data-bind='text: from')
              td(data-bind='text: subject')
block userjs
  != js('index')
  != js('socket')