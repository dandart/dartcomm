extends layout
block main
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title.text-center Please sign in
        .panel-body
          - if (messages.error)
            p.errors= messages.error
          form(accept-charset='UTF-8', role='form', method='post')
            fieldset
              .form-group
                input.form-control(placeholder='Username', name='username', type='text')
              .form-group
                input.form-control(placeholder='Password', name='password', type='password', value='')
              .checkbox
                label
                  input(name='remember', type='checkbox', value='Remember Me')
                  | Remember Me
              input.btn.btn-lg.btn-success.btn-block(type='submit', value='Login')
              h4.text-center or
              a.btn.btn-lg.btn-primary.btn-block(href='/login/register') Register

block userjs
  != js('login')
  != js('socket')