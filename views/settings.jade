extends layout
block main
  .col-lg-3
    .row
      a.btn.btn-success New Account
      table.table.table-striped
        thead
          tr
            th Account
        tbody#accounts(data-bind="foreach: TableRows")
          tr
            td(data-bind='text: type')
  .col-lg-9
    h2 Add a new account
    .row
      h1
        .col-lg-3
          a#email(href='#')
            i.fa.fa-envelope
        .col-lg-3
          a#twitter(href='/auth/twitter')
            i.fa.fa-twitter
        .col-lg-3
          a#facebook(href='/auth/facebook')
            i.fa.fa-facebook
        .col-lg-3
          a#linkedin(href='#')
            i.fa.fa-linkedin
block userjs
  != js('settings')
  != js('socket')