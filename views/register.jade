extends layout
block main
  .container
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title.text-center Register for an account
          .panel-body
            p.errors #{flash}
            form(accept-charset='UTF-8', role='form', method='post')
              fieldset
                .form-group
                  input.form-control(placeholder='Username', name='username', type='text')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                .form-group
                  input.form-control(placeholder='Password (again)', name='password2', type='password', value='')
                input.btn.btn-lg.btn-success.btn-block(type='submit', value='Register')
block userjs
  != js('login')
  != js('socket')