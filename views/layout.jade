include mixins
!!! 5
head
  meta(charset='utf-8')
  title DartComm
  meta(name='description', content='Communicate all of the things')
  meta(name='author', content='Dan Dart')
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  +jq
  +bs
  +fa
  != css('dartcomm')
  
body
  header.text-center
    h1 Welcome to DartComm
  main.col-lg-10.col-lg-offset-1
    .col-lg-2
      .row
        a.btn.btn-success New Message
        table.table.table-striped
          thead
            tr
              th Send to...
          tbody
            tr
              td Bob Dobbs
            tr
              td Bob Dobbs
    .col-lg-10
      .row
        p Welcome
      .row
        block main
        table.table.table-striped
          thead
            tr
              th Date
              th From
              th Subject
              th Flags
          tbody(data-bind="template: { name: 'tableRowTemplate', foreach: TableRows, as: 'Row' }")

      script#tableRowTemplate(type='text/html')
        tr
          td(data-bind='text: date')
          td(data-bind='text: from')
          td(data-bind='text: subject')
  +ko
  +js('/js/knockout.mapping-latest.js')
  +js('/socket.io/socket.io.js')
  != js('index')
  != js('socket')